 <resources>


    <style name="CustomAppTheme.Main" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/material_light_white</item>
    </style>

    <style name="CustomAppTheme.BlueGray" parent="AppTheme">
        <item name="colorPrimary">@color/material_blue_grey_500</item>
        <item name="colorPrimaryDark">@color/material_blue_grey_700</item>
        <item name="colorAccent">@color/material_light_white</item>
        <item name="android:windowBackground">@color/material_light_white</item>
    </style>

    <style name="LauncherTheme" parent="AppTheme">
        <item name="colorPrimary">@color/material_grey_800</item>
        <item name="colorPrimaryDark">@color/material_grey_500</item>
        <item name="colorAccent">@color/material_light_white</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

     <!-- 适用于开启滑动返回功能的Activity -->
     <style name="CustomAppTheme.Transparent" parent="AppTheme">
         <item name="android:windowBackground">@android:color/transparent</item>
         <item name="android:windowIsTranslucent">true</item>
     </style>


     <!-- 适用于欢迎界面避免第一次进来白屏或黑屏 -->
     <style name="CustomAppTheme.Transparent.Splash">
         <item name="android:windowDisablePreview">true</item>
     </style>


     <!-- Customize theme for floating. -->
     <style name="AppTheme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
         <item name="android:windowIsTranslucent">true</item>
         <item name="android:windowBackground">@android:color/transparent</item>
         <item name="android:windowContentOverlay">@null</item>
         <item name="windowNoTitle">true</item>
         <item name="android:windowIsFloating">true</item>
         <item name="android:backgroundDimEnabled">false</item>
     </style>

</resources>
